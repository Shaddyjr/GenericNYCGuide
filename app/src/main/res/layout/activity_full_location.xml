<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base">
    <LinearLayout style="@style/base_wrap_height.vertical">
        <RelativeLayout style="@style/base_wrap_height">
            <ImageView
                android:id="@+id/image"
                style="@style/base_wrap_height.fullImage" />
            <TextView
                android:id="@+id/name"
                style="@style/base_double_wrap.fullActivityTitle" />
        </RelativeLayout>
        <LinearLayout style="@style/base_wrap_height.vertical.fullText">
            <TextView
                android:id="@+id/address"
                style="@style/base_double_wrap.address" />
            <TextView
                android:id="@+id/time"
                style="@style/base_double_wrap.time" />
            <TextView
                android:id="@+id/description"
                style="@style/base_double_wrap.description" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
