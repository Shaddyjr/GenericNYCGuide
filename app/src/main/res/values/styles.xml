<resources>

    <!--Basic parent layouts -->
    <style name="base">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="base_wrap_height">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="base_double_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="base.vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="base_wrap_height.vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <!--End of Basic parent layouts -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/appBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- App Bar -->
    <style name="appBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>

    <!-- Tab -->
    <style name="tab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/colorAccent2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--List View-->
    <style name="locationListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:divider">@color/colorAccent2</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <!--List Item-->
    <style name="listItemImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:foreground">@drawable/image_overlay</item>
    </style>

    <style name="listItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>
    <!--End of List Item-->

    <!--Full Activity-->
    <style name="base_double_wrap.fullActivityTitle">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="base_wrap_height.vertical.fullText">
        <item name="android:padding">16dp</item>
    </style>

    <style name="base_wrap_height.fullImage">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="base_double_wrap.address">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="base_double_wrap.time">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="base_double_wrap.description">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>
